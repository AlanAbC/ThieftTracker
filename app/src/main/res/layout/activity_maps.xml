<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.rikym.thiefttracker.MapsActivity"
android:padding="0dp"
    android:background="#0093F5"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginRight="90dp"
        android:src="@drawable/thieftrakert"
        android:id="@+id/imageView" />
    <ImageButton
        android:id="@+id/acercade"
        android:layout_width="40dp"
        android:padding="12dp"
        android:layout_height="45dp"
        android:background="#0093F5"
        android:layout_marginRight="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/acerca"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignEnd="@+id/btnRegistro" />

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:layout_marginTop="48dp"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alan.quenoteroben.MapsActivity" />

    <ImageButton
        android:text=""
        android:padding="10dp"
        android:src="@drawable/thief"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/btnRegistro"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/boton_redondo"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/txtDireccion"
        android:layout_below="@+id/imageView"
        android:background="#ccffffff"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:singleLine="true"/>

    <ImageButton
        android:text=""
        android:src="@drawable/lupa"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginLeft="270dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="14dp"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:background="#ccffffff"
        android:id="@+id/btnBuscar" />

</RelativeLayout>